.row
    .col-md-12
        .panel.panel-primary
            .panel-heading
                %h1 Visitas
            .panel-body
                %ul.list-group
                    %li.list-group-item
                    - @country.each do |item|
                        %li.list-group-item
                            %p
                                %strong Visitas desde #{item[0]}
                                %span.badge.pull-right #{item[1]}

.row
    .col-md-12
        .panel.panel-primary
            .panel-heading
                %h1 Gráficas
            .panel-body
                %h2 País de visita
                - @visit_country.each do |item|
                    %p pais: #{item.country}
                    %p visitas: #{item.count}
                geo_chart #{@visit_country}
                %h2 Visitas por días
                - @visit_date.each do |item|
                    %p pais: #{item.date}
                    %p visitas: #{item.count}
                column_chart #{@visit_date}
